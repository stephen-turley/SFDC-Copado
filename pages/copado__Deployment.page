    <apex:outputPanel id="msg"> 
    <script type="text/javascript">
    $copado(function(){
        try{
            var apexMessagesQueue = {!jsonMessagesQueue};
            copadoApp&&copadoApp.consumeApexMessageQueue(apexMessagesQueue);
